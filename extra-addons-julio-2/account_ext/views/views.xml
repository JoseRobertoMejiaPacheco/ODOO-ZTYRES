<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form_inherit_order_id" model="ir.ui.view">
        <field name="name">stock.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="after">
                <field name="order_id" />
            </xpath>
        </field>
    </record>

    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">stock.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree" position="inside">
                <field name="move_type" invisible="1" />
                <field name="costo_final" 
                readonly="0"
                 attrs="{'invisible': [('move_type', '!=', 'in_invoice')]}"/>
            </xpath>           
        </field>
    </record>
    
    <record id="view_category_property_form_inherit" model="ir.ui.view">
        <field name="name">view.category.property.form.inherit</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <group name="first" position="after">
                <group name="account_property">
                    <group string="Account Properties" groups="account.group_account_readonly">
                        <field name="property_account_income_categ_id"/>
                        <field name="property_account_expense_categ_id"/>
                        <field name="property_account_expense_refund_categ_id"/>
                    </group>
                </group>
            </group>
        </field>
    </record>

    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.normal.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="account.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name='property_account_income_id' position='after'>
                <field name='property_account_expense_refund_id' groups="account.group_account_readonly" />
            </field>
        </field>
    </record>

    <record id="action_redo_move" model="ir.actions.server">
        <field name="name">Regenerar Movimientos</field>
        <field name="model_id" ref="account_ext.model_account_ext_redo_wizard"/>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="state">code</field>
        <field name="code">
            model.with_context(is_redo_move=True).redo()
        </field>
    </record>


    <record id="action_update_costo_final" model="ir.actions.server">
        <field name="name">Actualizar Costo Final</field>
        <field name="model_id" ref="purchase.model_purchase_order"/>
        <field name="binding_model_id" ref="purchase.model_purchase_order"/>
        <field name="state">code</field>
        <field name="code">
            if records:
                action = records.update_costo_final()
        </field>
    </record>

</odoo>
