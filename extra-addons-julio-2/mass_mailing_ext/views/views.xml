<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_mass_mailing_ext_form" model="ir.ui.view">
        <field name="name">mailing.lists.form</field>
        <field name="model">mailing.lists</field>
        <field name="arch" type="xml">
            <form string="Lista de Correos">
                <sheet>
                    <group>
                        <field name="date" />
                        <field name="partner_id" widget="many2many_tags" options="{'no_create': True}" />
                        <field name="attachment_id" />
                        <field name="attachment_ids" widget="many2many_binary" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_mass_mailing_ext_tree" model="ir.ui.view">
        <field name="name">mailing.lists.tree</field>
        <field name="model">mailing.lists</field>
        <field name="arch" type="xml">
            <tree string="Lista de Correos">
                <field name="date" />
                <field name="partner_id" />
                <field name="attachment_id" />
                <field name="attachment_ids" />
            </tree>
        </field>
    </record>

    
<record id="mailing_list_view_form_inherit_mass_mailing" model="ir.ui.view">
  <field name="name">mailing.list.form.inherit</field>
  <field name="model">mailing.list</field>
  <field name="inherit_id" ref="mass_mailing.mailing_list_view_form"/>
  <field name="arch" type="xml">
    <field name='is_public' position='after'>
      <group string="GeneraciÃ³n de Listas de Precio para mailing">
      
          <button  name="generate_list" type="object" icon="fa-search">              
          </button>
      
      
      </group>
    </field>
  </field>
</record>

    <record id="action_mass_mailing_ext" model="ir.actions.act_window">
        <field name="name">Listas de Correos</field>
        <field name="res_model">mailing.lists</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_mass_mailing_ext" name="Historico de Correos enviados" parent="marketing_automation.marketing_automation_menu" action="action_mass_mailing_ext" sequence="10"/>

</odoo>
